<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1st Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            app:errorEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2nd Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="3rd Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="4th Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="5th Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6th Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="7th Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_sem8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="8th Sem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginVertical="14dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calculator_editText_sem8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:inputType="numberDecimal"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculator_button_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="CALCULATE"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            app:cornerRadius="18sp"
            android:onClick="calculateCGPA"
            />

        <TextView
            android:id="@+id/calculator_textview_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:text="C.G.P.A : 9.99"
            android:textAlignment="center"
            android:padding="14dp"
            android:textSize="18sp"
            android:visibility="gone"
            />

    </LinearLayout>


</ScrollView>